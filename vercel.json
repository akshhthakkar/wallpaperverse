{
  "buildCommand": null,
  "outputDirectory": ".",
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "wallpapers.akshthakkar.me"
        }
      ],
      "destination": "https://wallpaperverse.akshthakkar.me/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "wallpapers-verse.vercel.app"
        }
      ],
      "destination": "https://wallpaperverse.akshthakkar.me/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "wallpapersverse.vercel.app"
        }
      ],
      "destination": "https://wallpaperverse.akshthakkar.me/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/wallpaper/:id", "destination": "/wallpaper.html?id=:id" },
    { "source": "/submit", "destination": "/submit.html" },
    { "source": "/admin", "destination": "/admin.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/thumbnails/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/optimized/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
